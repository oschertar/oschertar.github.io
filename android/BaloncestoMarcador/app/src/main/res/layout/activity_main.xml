<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:background="@drawable/pista"
    tools:context="com.example.oschertar.baloncestomarcador.MainActivity">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:orientation="vertical">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">


        </LinearLayout>
        <TextView
            android:layout_width="150dp"
            android:layout_height="wrap_content"
            android:textSize="60sp"
            android:text="0"
            android:id="@+id/marcadorlocal"
            android:layout_gravity="center"
            android:layout_weight="1"
            android:textAlignment="center"
            android:gravity="center"
            android:textColor="@color/marcadorLetra"
            android:background="@color/marcador"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="10dp"
            android:text="LOCAL"
            android:textSize="25sp"
            android:id="@+id/local"
            android:layout_gravity="center"
            android:layout_weight="5"
            android:textAlignment="center"
            android:gravity="center"
            android:fontFamily="@string/app_name"
            android:background="@android:color/background_light"/>

        <Button
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:background="@drawable/reset"
            android:layout_gravity="center"
            android:textSize="30sp"
            android:layout_weight="1"
            android:id="@+id/resetLocal"
            />


    </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"
            >


            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/sumar3local"
                android:layout_weight="1"
                android:layout_marginTop="0dp"
                android:background="@drawable/canasta3"
                android:textSize="30sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/sumar2local"
                android:layout_marginTop="0dp"
                android:background="@drawable/canasta2"
                android:textSize="30sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/sumar1local"
                android:layout_marginTop="0dp"
                android:textSize="30sp"
                android:background="@drawable/canasta1"

                />


        </LinearLayout>







    </LinearLayout>








    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_weight="1"
        >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_weight="2"
            android:orientation="vertical">
            <TextView
                android:layout_width="150dp"
                android:layout_height="wrap_content"
                android:textSize="60sp"
                android:text="0"
                android:id="@+id/marcadorVisitante"
                android:layout_gravity="center"
                android:layout_weight="1"
                android:textAlignment="center"
                android:gravity="center"
                android:textColor="@color/marcadorLetra"
                android:background="@color/marcador"/>
            <TextView
                android:layout_width="150dp"
                android:layout_height="10dp"
                android:text="VISITANTE"
                android:textSize="25sp"
                android:id="@+id/visitante"
                android:layout_gravity="center"
                android:layout_weight="5"
                android:textAlignment="center"
                android:gravity="center"
                android:background="@android:color/background_light"/>

            <Button
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:background="@drawable/reset"
                android:layout_gravity="center"
                android:textSize="30sp"
                android:id="@+id/resetVisitante"
                android:layout_weight="1"
                />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:layout_weight="1"

            >

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:id="@+id/sumar3visitante"
                android:layout_weight="1"
                android:background="@drawable/canasta3"
                android:textSize="30sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/sumar2visitante"
                android:background="@drawable/canasta2"
                android:textSize="30sp"/>

            <Button
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:layout_weight="1"
                android:id="@+id/sumar1visitante"
                android:background="@drawable/canasta1"
                android:textSize="30sp"/>


        </LinearLayout>







    </LinearLayout>





</LinearLayout>
